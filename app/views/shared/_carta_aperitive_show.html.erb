<div class="background-show">
    <div class="carta-back">
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="aperitive" role="tabpanel" aria-labelledby="aperitive-tab">
                <h2 style="text-align: center; padding-top: 10px; color: white;"><%= t('menues.show_drink.aperitivo') %></h2>
                <h5 style="color: white;" class="mt-3 pl-3 pr-3"><%= t('menues.show_9granados.terraza') %></h5>
                <div class="separate">
                </div>
                <div class="">
                    <% @drinks.each do |drink|  %>
                        <% if drink.aperitive == true %>
                        <div class="name-price-carta meal-card">
                            <h5><%= drink.name %></h5>
                            <p class="mt-3"><%= drink.description %></p>
                            <h6 class="price"><%= drink.price %>€</h6>
                        </div>
                        <div class="separate">
                        </div>
                        <% end %>
                    <% end %>
                </div>
            </div>
            <div class="tab-pane fade" id="beer" role="tabpanel" aria-labelledby="beer-tab">
                <h2 style="text-align: center; padding-top: 10px; color: white;"><%= t('menues.show_drink.cerveza') %></h2>
                <div class="separate">
                </div>
                <div class="">
                    <% @drinks.each do |drink|  %>
                        <% if drink.beer == true %>
                        <div class="name-price-carta meal-card">
                            <h5><%= drink.name %></h5>
                            <p class="mt-3"><%= drink.description %></p>
                            <h6 class="price"><%= drink.price %>€</h6>
                        </div>
                        <div class="separate">
                        </div>
                        <% end %>
                    <% end %>
                </div>
            </div>
            <div class="tab-pane fade" id="rum" role="tabpanel" aria-labelledby="rum-tab">
                <h2 style="text-align: center; padding-top: 10px; color: white;"><%= t('menues.show_drink.ron') %></h2>
                <div class="separate">
                </div>
                <div class="">
                    <% @drinks.each do |drink|  %>
                        <% if drink.rum == true || drink.gin == true || drink.vodka == true %>
                        <div class="name-price-carta meal-card">
                            <h5><%= drink.name %></h5>
                            <p class="mt-3"><%= drink.description %></p>
                            <h6 class="price"><%= drink.price %>€</h6>
                        </div>
                        <div class="separate">
                        </div>
                        <% end %>
                    <% end %>
                </div>
            </div>
            <div class="tab-pane fade" id="whiskey" role="tabpanel" aria-labelledby="whiskey-tab">
                <h2 style="text-align: center; padding-top: 10px; color: white;">Whiskey</h2>
                <div class="separate">
                </div>
                <div class="">
                    <% @drinks.each do |drink|  %>
                        <% if drink.whiskey == true %>
                        <div class="name-price-carta meal-card">
                            <h5><%= drink.name %></h5>
                            <p class="mt-3"><%= drink.description %></p>
                            <h6 class="price"><%= drink.price %>€</h6>
                        </div>
                        <div class="separate">
                        </div>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
<%# TAB %>
            <div class="navbar navbar-expand-sm navbar-light navbar-meals w-100">
                <ul class="nav nav-pills tab-menu" id="pills-tab" role="tablist">
                    <li class="nav-item col-6">
                        <a class="nav-link active" id="own-events-tab" data-toggle="pill" href="#aperitive" role="tab" aria-controls="aperitive" aria-selected="true"><%= t('menues.show_drink.aperitivo') %></a>
                    </li>
                    <li class="nav-item col-6">
                        <a class="nav-link" id="applied-events-tab" data-toggle="pill" href="#beer" role="tab" aria-controls="beer" aria-selected="false"><%= t('menues.show_drink.cerveza') %></a>
                    </li>
                    <li class="nav-item col-6">
                        <a class="nav-link" id="favorites-tab" data-toggle="pill" href="#rum" role="tab" aria-controls="rum" aria-selected="false"><%= t('menues.show_drink.ron') %></a>
                    </li>
                    <li class="nav-item col-6">
                        <a class="nav-link" id="favorites-tab" data-toggle="pill" href="#whiskey" role="tab" aria-controls="whiskey" aria-selected="false">Whiskey</a>
                    </li>
                </ul>
            </div>